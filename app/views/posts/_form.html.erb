<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_image_select(@post) %>
        <%= simple_form_for @post, html: { multipart: true } do |f| %> 
          <div class="row">
            <div class="col-md-12 text-center">
              <%= f.error_notification %>
            </div>
            <div class="container-fluid">
              <div class="form-group text-center">
                <h4 class="text-center">Upload an image (this is required):</h4>
                <%= f.input :image, required: true, label: false, input_html: { onChange: 'loadFile(event)' } %>
              </div>
              <div class="form-group text-center">
                <%= f.input :caption, autofocus: true, label: false, placeholder: 
                  "Add a caption...", input_html: {class: " text-center input form-control" } %>
              </div>
              <div class="form-group text-center">
                <%= f.button :submit, class: 'btn btn-success btn-block', id: "post-submit" %>
              </div>
        <% end %>
      </div>
    </div>
  </div>
</div>