<div id="comment">
  <div class="user-name">
        <%= link_to comment.user.username, profile_path(comment.user.username) %>
      </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if comment.user == current_user %>
    <%= link_to post_comment_path(post, comment), method: :delete, data: 
      { confirm: "Delete this comment?" } do %>
      <span class="glyphicon glyphicon-remove delete-comment"></span>
    <% end %>
  <% end %>
</div>